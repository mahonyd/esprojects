@{
    ViewData["Title"] = "Home Page";
}

<div class="panel panel-default top-margin-10">

    <div class="panel-body" style="min-height:350px;">
        <div id="unsupported-browser" class="alert alert-warning hide" role="alert">
            <h4>Warning</h4>
            Internet Explorer version 8 on Windows XP is no longer supported by Microsoft so we are unable to provide the EDEN portal on this platform.  If you are running on Windows XP then please use another internet browser such as <a href="http://www.google.com/chrome/" target="_blank">Google Chrome</a> or <a href="https://www.mozilla.org/en-US/firefox/new/" target="_blank">Firefox</a> in order to use the EDEN portal.
        </div>
        <div class="table-responsive">
            <h3>Welcome to ASP.NET Core Authentication - Unsecure Page</h3>
            <p>Estream is an online gateway to lots of stuff. </p>
            <a target="_blank" href="@Url.Action("GetHelpFileForReg", "Help")">Vist the Help section</a>
            <h3>Single Sign-On</h3>
            <p>Estream is based on single sign-on technology to allow users to logon to multiple applications using a single username / password combination. </p>
        </div>
        <div class="top-margin-20">
            <div class="col-xs-12 col-md-6 col-lg-6">
                <a href="@Url.Action("SignIn", "Account")" class="btn btn-primary btn-block"><i class="fa fa-lock"></i> Sign In</a>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-6">
                <a href="@Url.Action("Register", "Account")" class="btn btn-success btn-block">Sign Up</a>
            </div>
        </div>
    </div>
</div>



