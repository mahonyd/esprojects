<h1>Secure</h1>

<div class="row">
    <div class="col-md-6">
        <a href="/home/callapi">Call API</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Claims</h2>
        <dl>
            @foreach (var claim in User.Claims)
            {
                <dt>@claim.Type</dt>
                <dd>@claim.Value</dd>
            }

            <dt>access token</dt>
            <dd>@ViewBag.AccessToken</dd>

            <dt>identity token</dt>
            <dd>@ViewBag.IdentityToken</dd>

            <dt>refresh token</dt>
            <dd>@ViewBag.RefreshToken</dd>
        </dl>
    </div>
</div>
