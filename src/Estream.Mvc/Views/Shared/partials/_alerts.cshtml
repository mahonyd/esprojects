@{
    var successMessage = TempData["alert_message_success"];
}


<div class="alerts">

    @if (successMessage != null)
    {
        <div class="alert alert-block alert-success fade in">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Success</h4>
            <p>@successMessage</p>
        </div>
    }


</div>
